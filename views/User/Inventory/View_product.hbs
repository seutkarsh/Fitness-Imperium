                  <div class="main-content">
                    <div class="inventory">
                        <div class="inventory__container">
                        <div class="container-fluid py-4 mb-4">
                          {{#if info}}
                                <div class="alert alert-primary">

                                    <div>
                                        <img src="/public/Images/Alert/info.svg" alt="" style="fill: currentColor;">
                                        <span>{{info}}</span>
                                    </div>
                                    <span class="closebtn"
